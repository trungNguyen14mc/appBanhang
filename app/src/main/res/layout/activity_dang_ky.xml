<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DangKyActivity">
    <TextView
        android:layout_width="match_parent"
        android:text="Đăng Ký"
        android:id="@+id/txtDN"
        android:textSize="25sp"
        android:textColor="#05EAEA"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/line11"
        app:layout_constraintTop_toBottomOf="@id/txtDN"
        android:layout_marginTop="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="154dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginStart="10dp"
            android:id="@+id/edit_query_email"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:drawablePadding="5dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:hint="Email" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/line"
        app:layout_constraintTop_toBottomOf="@id/line11"
        android:layout_marginTop="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="154dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginStart="10dp"
            android:id="@+id/edit_query_username"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="5dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="Username" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/line22"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:layout_marginTop="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="154dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:id="@+id/edit_query_pass"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:hint="Pass" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/line33"
        app:layout_constraintTop_toBottomOf="@id/line22"
        android:layout_marginTop="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="154dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginEnd="10dp"
            android:id="@+id/edit_query_pass2"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:hint="Pass" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/line3"
        app:layout_constraintTop_toBottomOf="@id/line33"
        android:layout_marginTop="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="154dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginEnd="10dp"
            android:id="@+id/edit_query_mobile"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="5dp"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:hint="Số Điện Thoại" />
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Đăng Ký"

        android:background="@color/colorText"
        android:id="@+id/btnDangKy"
        android:layout_marginTop="20sp"
        android:layout_marginStart="25sp"
        android:textColor="@color/white"
        android:layout_marginEnd="25sp"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>